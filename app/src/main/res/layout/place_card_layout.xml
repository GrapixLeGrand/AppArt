<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/place_card_image_CardLayout_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/place_card_star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/place_card_star_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_card_textView"
                    app:srcCompat="@android:drawable/star_off" />

                <ImageView
                    android:id="@+id/place_card_star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/place_card_star_3"
                    app:layout_constraintStart_toEndOf="@+id/place_card_star_1"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_card_textView"
                    app:srcCompat="@android:drawable/star_off" />

                <ImageView
                    android:id="@+id/place_card_star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/place_card_star_4"
                    app:layout_constraintStart_toEndOf="@+id/place_card_star_2"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_card_textView"
                    app:srcCompat="@android:drawable/star_off" />

                <ImageView
                    android:id="@+id/place_card_star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/place_card_star_5"
                    app:layout_constraintStart_toEndOf="@+id/place_card_star_3"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_card_textView"
                    app:srcCompat="@android:drawable/star_off" />

                <ImageView
                    android:id="@+id/place_card_star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="249dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/place_card_star_4"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_card_textView"
                    app:srcCompat="@android:drawable/star_off" />

                <TextView
                    android:id="@+id/place_card_distance"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="291dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="1dp"
                    android:text="distance"
                    android:textColor="@color/primaryStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/place_name_card_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="201dp"
                    android:text="Name"
                    android:textColor="@color/primaryStart"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/place_card_distance"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.135" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>